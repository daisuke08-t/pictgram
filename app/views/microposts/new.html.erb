<div class="micropost-wrapper">
    <div class="container">
        <div class="row">
            <div class="col-md-offset-4 col-md-4 micropost-container">
                <h1 class="text-center text-black">コメントを入力</h1>
                <%= form_for @micropost do |f| %>
                <%= render 'layouts/shared/error_messages', model: f.object %>
                <%= f.hidden_field :topic_id, :value => @topicid %>
                <div class="form-group">
                    <%= f.label :coment, class: 'text-black' %>
                    <%= f.text_area :coment, class: 'form-control' %>
                </div>
                
                
                <%= f.submit "コメント投稿", class: 'btn-block btn-black' %>
                <% end %>
            </div>
        </div>
    </div>
</div>