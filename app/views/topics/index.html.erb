<div class="topic-index-wrapper">
  <div class="container">
    <% @topics.each do |topic| %>
    <div class="row">
      <div class="col-md-6 col-md-fooset-3">
        <div class="topic-index-single">
          <h2 class="topic-author">
            <%= topic.user.name %>
          </h2>
          <%= image_tag topic.image.url %>
          
          <% if !topic.favorite_users.include?(current_user) %>
            <%= link_to favorites_path(topic_id: topic.id), method: :post do %>
              <%= image_tag 'tech-boost-image/icon/heart-black.png', class: 'heart-white' %>
            <% end %>
          <% elsif topic.favorite_users.include?(current_user) %>
            <%= link_to favorites_destroy_path(topic_id: topic.id), method: :delete do %>
              <%= image_tag 'tech-boost-image/icon/heart-black.png', class: 'heart-red' %>
            <% end %>
          <% end %>
          
          <%= link_to new_micropost_path(topic_id: topic.id) do %>
            <%= image_tag 'tech-boost-image/icon/comment.png', class: 'topic-index-icon' %>
          <% end %>
          
          <p class="topic-text">
            <%= topic.description %>
          </p>
          
          <h3>コメント</h3>
          <!--一つ一つのtopicに関連づいているmicropostを取得する-->
          <% topic.microposts.each do |m| %>
          <p><%= m.coment %></p>
          <% end %>
          
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>